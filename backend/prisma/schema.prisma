generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  groupID   String?   @db.ObjectId
  group     Group?    @relation(fields: [groupID], references: [id])
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  year      Int
}

model Group {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  users     User[]
  createdAt DateTime @default(now())
}
